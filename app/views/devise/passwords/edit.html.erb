<h2>Изменить пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="row without-margin">
    <div class="col-xs-12 without-padding">
      <div class="row buffer-both">
        <div class="col-xs-10">
          <div class="row">
            <div class="col-xs-12">
              <%= f.label :new_password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> символов минимум)</em>
              <% end %><br />
            </div>
          </div>
          <div class="row without-margin">
            <div class="col-xs-6 without-padding">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "новый пароль", class: 'form-control' %>
            </div>
            <div class="col-xs-1 without-padding text-center">
              <i class="glyphicon glyphicon-lock vcenter"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="row buffer-both">
        <div class="col-xs-10">
          <div class="row">
            <div class="col-xs-12">
              <%= f.label :password_confirmation %><br />
            </div>
          </div>
          <div class="row without-margin">
            <div class="col-xs-6 without-padding">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "подтверждение пароля", class: 'form-control' %>
            </div>
            <div class="col-xs-1 without-padding text-center">
              <i class="glyphicon glyphicon-lock vcenter"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="row buffer-both">
    <div class="col-xs-12">
      <div class="actions">
        <%= f.submit t('actions.save'), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
    </div>
  </div>
<% end %>

<div class="row without-margin buffer-both">
  <div class="col-xs-12 without-padding">
    <%= render "devise/shared/links" %>
  </div>
</div>
