<% photo_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>

<% if current_user_can_edit?(photo) %>
  <% link_to_delete = link_to(
      fa_icon('trash'), event_photo_path(photo.event, photo),
      method: :delete, data: {confirm: t('.destroy_confirm')}
  ) %>
  <% photo_title << link_to_delete %>
<% end %>

<%= link_to image_tag(photo.photo.thumb.url), photo.photo.url,
            data: { toggle: 'lightbox', title: photo_title, gallery: 'event-photos' }
%>